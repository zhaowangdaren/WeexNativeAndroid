<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.site.yiyan.weexnativeandroid.MainActivity"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="weex js url"
        android:id="@+id/et_weex_js_url"/>

    <Button
        android:id="@+id/bt_weex_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onWeexStart"
        android:text="开始"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="websocket port"
        android:id="@+id/et_weex_websocket_port"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="socket url"
        android:id="@+id/et_weex_websocket_url"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="connect"
        android:onClick="onWebSocketConnect"/>
    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</LinearLayout>
